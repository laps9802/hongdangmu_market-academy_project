<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40px"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_goods_image"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="40px"
            android:layout_marginRight="30px"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:layout_weight="1"
                        android:background="@android:color/background_light"
                        android:text="TextView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/background_light"
                            android:text="TextView"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <TextView
                            android:id="@+id/texteview_board_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/background_light"
                            android:text="TextView" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_context_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:drawable/ic_menu_agenda" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_reservation"
                    android:layout_width="200px"
                    android:layout_height="65px"
                    android:visibility="gone"
                    app:srcCompat="@drawable/reservation" />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="5px">

                <ImageView
                    android:id="@+id/imageView_reply_count"
                    android:layout_width="30dp"
                    android:layout_height="19dp"
                    app:srcCompat="@drawable/reply" />

                <TextView
                    android:id="@+id/textView_reply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:background="@android:color/background_light"
                    android:text="TextView" />

                <ImageView
                    android:id="@+id/imageView_interest_count"
                    android:layout_width="30dp"
                    android:layout_height="19dp"
                    app:srcCompat="@drawable/interest3" />

                <TextView
                    android:id="@+id/textView_interest_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_sale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/button_sellComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="거래완료"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button_reviewCompleteSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:text="후기 작성"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_hideOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:text="숨기기 해제"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_review2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:text="거래 후기 남기기"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_reviewCompleteBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:text="작성한 후기 보기"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>