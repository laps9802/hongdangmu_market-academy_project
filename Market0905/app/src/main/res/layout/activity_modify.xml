<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModifyActivity">
    <!-- 글수정-->
    <EditText
        android:gravity="center_vertical"
        android:hint="제목"
        android:id="@+id/modify_subject_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/modify_category_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="카테고리"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/modify_area_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="지역"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:hint="가격"
            android:inputType="number"
            android:id="@+id/modify_price_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격제안받기"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/modify_image_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/modify_select_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/modify_select_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/modify_select_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
    <EditText
        android:id="@+id/modify_content_edit"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="지역명에 올릴 게시글 내용을 작성해주세요. 가품 및 판매금지품목은 개시가 제한될 수 있어요."
        android:gravity="top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/modify_photo_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_camera" />
        <TextView
            android:id="@+id/modify_upload_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/3"/>
    </LinearLayout>
</LinearLayout>